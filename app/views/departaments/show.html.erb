<% title(@departament.name, "Departaments") %>

<header>
  <h1><%= @departament.name %></h1>
  <ul class="actions">
    <% if policy(@departament).update? %>
      <li><%= link_to 'Edit departament', edit_departament_path(@departament),
        class: 'edit' %></li>
    <% end %>
    <!-- <li><%= link_to 'Edit Departament',
        edit_departament_path(@departament),
        class: 'edit' %>
    </li> -->
    <% admin_only do %>
      <li><%= link_to 'Delete Departament',
          admin_departament_path(@departament),
          method: :delete,
          data: { confirm: 'Are you sure you want to delete this departament?'},
          class: 'delete' %>
      </li>
    <% end %>
  </ul>
</header>

<p><%= @departament.description %></p>

<header>
  <h2>Ticket</h2>
  <ul class="actions">
    <li>
      <%= link_to 'New Ticket', new_departament_ticket_path(@departament), class: 'new' %>
    </li>
  </ul>
</header>

<ul id="tickets">
  <% @departament.tickets.each do |ticket| %>
    <li>
      #<%= ticket.id %> -
      <%= link_to ticket.name, [@departament, ticket] %>
    </li>
  <% end %>
</ul>
